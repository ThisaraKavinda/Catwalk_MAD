    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdsRequestsAdmin">


        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menu_admin_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/adrequestadminbackbtn1"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="-50dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="BACK"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:cornerRadius="15dp"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck">


                </Button>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Ads Requests"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/profilepic" />
                </RelativeLayout>

                <GridLayout
                    android:columnCount="1"
                    android:rowCount="4"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp"
                        android:paddingBottom="0dp"
                        >

                        <LinearLayout
                            android:orientation="horizontal"

                            android:paddingTop="16dp"
                            android:paddingRight="16dp"
                            android:paddingLeft="16dp"
                            android:paddingBottom="8dp"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:layout_marginBottom="0dp">

                            <ImageView
                                android:src="@drawable/girlmodel1"
                                android:layout_width="80dp"
                                android:layout_height="120dp"
                                android:layout_marginVertical="10dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:paddingLeft="15dp"
                                android:layout_marginLeft="8dp"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="0dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4sp"
                                    android:text="Need a talented Young lady"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="#000"
                                    android:textSize="18sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:text="Want modelling jobs near you? And also ads to your modelling career? This is the what are you all waiting for, Glamworldface.com is here to help you out. Who says you may be..."
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="#6f6f6f"
                                    android:textSize="12sp"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <Button

                                        android:id="@+id/adrequestviewadminbtn1"
                                        android:layout_width="100dp"
                                        android:layout_height="48dp"

                                        android:layout_marginTop="5dp"

                                        android:layout_marginRight="40dp"
                                        android:clickable="true"
                                        android:text="View"
                                        android:textAllCaps="true"

                                        android:textSize="10sp"
                                        app:backgroundTint="#01D60A"
                                        app:cornerRadius="20dp" />

                                    <Button

                                        android:id="@+id/adrequestrejectadminbtn1"
                                        android:layout_width="100dp"
                                        android:layout_height="48dp"

                                        android:layout_marginTop="5dp"
                                        android:capitalize="none"
                                        android:clickable="true"
                                        android:text="Reject"
                                        android:textAllCaps="false"
                                        android:textSize="10sp"
                                        app:backgroundTint="#D0342C"
                                        app:cornerRadius="20dp"></Button>


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="12dp"
                        android:paddingBottom="0dp"
                        >

                        <LinearLayout
                            android:orientation="horizontal"

                            android:paddingTop="16dp"
