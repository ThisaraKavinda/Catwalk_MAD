<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inquiry">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_admin_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/Inquirybackbtn1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-50dp"
                android:backgroundTint="#FFFFFF"
                android:text="BACK"
                android:textColor="#000000"
                android:textSize="12sp"
                app:cornerRadius="15dp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck">
            </Button>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Submit a Inquiry"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/profilepic" />
            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:rowCount="4">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="17dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white_button"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingTop="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="32dp"
                                android:text="Title"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Enter a title in short" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="290dp"
                                android:layout_height="32dp"
                                android:text="Have you submit this inquiry before?"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <RadioGroup
                                android:layout_width="250dp"
                                android:layout_height="32dp"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:layout_width="70dp"
                                    android:layout_height="33dp"
                                    android:text="Yes"
                                    android:layout_marginHorizontal="25dp"/>

                                <RadioButton
                                    android:layout_width="85dp"
                                    android:layout_height="33dp"
                                    android:text="No"
                                    android:layout_marginHorizontal="25dp"/>

                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="32dp"
                                android:text="About"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:entries="@array/inquiry_types" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="93dp"
                                android:layout_height="32dp"
                                android:text="Description"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Describe your inquiry here"
                                android:height="150dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="105dp"
                                android:layout_height="32dp"
                                android:text="Attachments"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="32dp"
                                android:text="new_image.jpg"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:alpha="0.6"
                                android:layout_marginLeft="15dp"/>

                            <ImageButton
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/attached"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingHorizontal="20dp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:background="@drawable/rounded_button_color"
                                android:text="SUBMIT" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>